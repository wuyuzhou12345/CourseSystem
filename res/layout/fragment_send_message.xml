<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#E0E0E0">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
        <TextView
            android:id="@+id/fsm_tv_person_to_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收信人" 
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            </TextView>
         <ScrollView
             android:id="@+id/fsm_sv_person_to_post"
             android:layout_width="205dp"
             android:layout_height="60dp"
             >
        		<EditText
        		     android:layout_marginTop="10dp"
             		 android:layout_marginBottom="10dp"
        			  android:id="@+id/fsm_et_person_to_post"
            		  android:layout_width="205dp"
            		  android:layout_height="wrap_content"
            		  android:textSize="14sp"
            		  android:textColor="#000000"
    				  android:background="@drawable/fragment_tv_style"
            	>
            	</EditText>
          </ScrollView>
          <Button
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:id="@+id/fsm_btn_lookfor"
              android:background="@drawable/search_send"
              android:layout_marginRight="5dp"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
              >
              </Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
         <TextView
            android:id="@+id/fsm_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标   题" 
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
>
             </TextView>
         <EditText
             android:id="@+id/fsm_et_title"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textColor="#000000"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginRight="5dp"
    		 android:background="@drawable/fragment_tv_style"
             >
             </EditText>
             
        </LinearLayout>
        
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
         <TextView
            android:id="@+id/fsm_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内   容" 
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
             </TextView>
       	<ScrollView
             android:id="@+id/fsm_sv_content"
             android:layout_width="fill_parent"
             android:layout_height="80dp"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginRight="5dp"
             >
        		<EditText
        			  android:id="@+id/fsm_et_content"
            		  android:layout_width="match_parent"
            		  android:layout_height="wrap_content"
            		  android:textSize="18sp"
            		  android:textColor="#000000"
    		 		  android:background="@drawable/fragment_tv_style"
    		 		  android:maxLines="7"
             	>
            	</EditText>
         </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/fsm_btn_clear"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/button_selector_ok"
                android:text="重置"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="70dp"
                >
                </Button>
             <Button
                android:id="@+id/fsm_btn_send"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/button_selector_ok"
                android:text="发送"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                </Button>
            </LinearLayout>

</LinearLayout>
