<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fau_tv_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/linear_fao02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 请选择要添加的部门 ： "
            android:textColor="#0072E3"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/fauc_sp_section"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:entries="@array/user_redCross_section"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/fauc_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fao_btn_style"
        android:text="@string/add_user"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />



    <requestFocus />

</LinearLayout>