<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <LinearLayout
        android:id="@+id/fma_ll_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
<TextView
    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 android:text="发信人："
    android:textSize="15sp"/>
<TextView
    android:id="@+id/fma_tv_sender"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 android:text="发信人"
    android:textSize="15sp"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/fma_ll_title"
    android:layout_below="@id/fma_ll_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
<TextView
  
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#a9a9a9"
     android:text="标题："
    />
<TextView
    android:id="@+id/fma_tv_title"
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#a9a9a9"
     android:text="标题："
    />
</LinearLayout>
<TextView
    android:id="@+id/fma_tv_date"
    android:layout_below="@id/fma_ll_sender"
    android:layout_toRightOf="@id/fma_ll_title"
       android:layout_gravity="right|bottom"
       android:gravity="right|bottom"
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:textColor="#a9a9a9"
   
    android:text="日期"
    />


</RelativeLayout>
