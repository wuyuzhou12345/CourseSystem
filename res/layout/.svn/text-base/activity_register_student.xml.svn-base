<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f0f0f0">
   
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
       android:orientation="horizontal"
       
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="用 户 名"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
              android:textColor="@color/text_color"
            android:layout_marginRight="5dp"
            
        />
    <EditText
        android:id="@+id/frs_tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
         android:background="@drawable/fao_tv_style2"
         android:textSize="14sp"
      
         android:hint="必填,6到15位的英文，数字或下划线"
        />
    </LinearLayout>
       <LinearLayout
           android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
       android:orientation="horizontal"
       
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="密     码"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
         android:textColor="@color/text_color"
        />
    <EditText
        android:id="@+id/frs_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textSize="14sp"
   		android:hint="必填,6到16以内的英文，数字，符号"	
        android:inputType="textPassword"
         android:background="@drawable/fao_tv_style2"
         
        />
    </LinearLayout>
        <LinearLayout
           android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
       android:orientation="horizontal"
       
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="确认密码"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
         android:textColor="@color/text_color"
        />
    <EditText
        android:id="@+id/frs_et_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   			
        android:inputType="textPassword"
         android:background="@drawable/fao_tv_style2"
         
        />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:layout_marginTop="15dp"
       android:orientation="horizontal"
      android:layout_marginRight="5dp"
        >
        <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="学校名称"
 	android:textSize="14sp"
  android:textColor="@color/text_color"
 	    android:layout_marginLeft="10dp"
 	      android:layout_marginRight="5dp"
 	
        />
    <EditText
        android:id="@+id/frs_et_schoolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
         android:background="@drawable/fao_tv_style2"
         android:textSize="14sp"
         android:hint="必填"
         
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
       android:orientation="horizontal"
 android:layout_marginRight="5dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="真实姓名"
        android:textSize="14sp"
            android:layout_marginLeft="10dp"
               android:layout_marginRight="5dp"
              android:textColor="@color/text_color"
        />
    <EditText
        android:id="@+id/frs_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:textSize="14sp"
        android:hint="必填，请填写真实姓名"
         android:background="@drawable/fao_tv_style2"
     
        />
    </LinearLayout>
      <LinearLayout
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
   
       android:orientation="horizontal"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="学生学号"
        android:textSize="14sp"
           android:layout_marginLeft="10dp"
             android:textColor="@color/text_color"
               android:layout_marginRight="5dp"
               
        />
    <EditText
        android:id="@+id/frs_et_sno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="14sp"
     android:hint="必填"
         android:background="@drawable/fao_tv_style2"
        />
    </LinearLayout>
        <LinearLayout
   android:layout_width="match_parent"
        android:layout_height="wrap_content"
 
       android:orientation="horizontal"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
          android:layout_marginRight="5dp"
        android:text="性       别"
        android:textSize="14sp"
           android:layout_marginLeft="10dp"
          android:layout_marginTop="5dp"
             android:textColor="@color/text_color"
        />
	<RadioGroup
 		    android:id="@+id/frs_rg_gender"
 	 android:layout_width="match_parent"
        android:layout_height="30dp"
 		    android:orientation="horizontal"
 		   
 		 
 		    >
 		   <RadioButton 
 		       android:id="@+id/frs_rb_male"
 		       android:layout_width="100dp"
 		       android:layout_height="30dp"
 		       android:text="男"
 		       android:textSize="13sp"
 		       android:textColor="@color/text_color"
 		       android:checked="true"/>
 		      <RadioButton 
 		          android:id="@+id/frs_rb_female"
 		          android:layout_width="50dp"
 		       android:layout_height="30dp"
 		       android:text="女"
 		       android:textSize="13sp"
 		       android:textColor="@color/text_color"/>
 		</RadioGroup>
    </LinearLayout>
      <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
        >
	 
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="系      别"
        android:textSize="14sp"
          android:layout_marginRight="5dp"
           android:layout_marginLeft="10dp"
             android:textColor="@color/text_color"
        />
    <Spinner
            android:id="@+id/frs_et_dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:background="#eFFFFFFF"
            android:entries="@array/user_dept"
            android:textColor="#000000"
            android:textSize="14sp"
            />
   
    </LinearLayout>
      <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="专      业"
        android:textSize="14sp"
          android:layout_marginRight="5dp"
           android:layout_marginLeft="10dp"
             android:textColor="@color/text_color"
        />
    <EditText
        android:id="@+id/frs_et_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 android:hint="选填"
        android:textSize="14sp"      
         android:background="@drawable/fao_tv_style2"
        />
    </LinearLayout>
       <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="长      号"
        android:textSize="14sp"
          android:layout_marginRight="5dp"
           android:layout_marginLeft="10dp"
             android:textColor="@color/text_color"
        />
    <EditText
        android:id="@+id/frs_et_longPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="14sp"
         android:background="@drawable/fao_tv_style2"
        />
    </LinearLayout>
      <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginRight="5dp"
       android:layout_marginTop="15dp"
        >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="短      号"
        android:textSize="14sp"
          android:layout_marginRight="5dp"
           android:layout_marginLeft="10dp"
             android:textColor="@color/text_color"
        />
    <EditText
        android:id="@+id/frs_et_shortPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="14sp"
        
         android:background="@drawable/fao_tv_style2"
        />
    </LinearLayout>
         <LinearLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:orientation="horizontal"
  		android:layout_marginTop="15dp"
        >
  <Button
      android:id="@+id/frs_btn_ok"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     
     android:text="@string/register_org"/>
    
    </LinearLayout>
</LinearLayout>
</ScrollView>
